{
  "name": "truly-ui",
  "title": "Truly-UI",
  "description": "Web Components for Desktop Applications.",
  "version": "0.0.0-development",
  "repository": "https://github.com/TemainfoSistemas/truly-ui.git",
  "author": "Temainfo Sistemas <suporte@temainfo.com.br>",
  "homepage": "http://truly-ui.tk",
  "keywords": [
    "angular",
    "ui",
    "desktop",
    "ng",
    "electron",
    "angular2",
    "grid",
    "datagrid",
    "input",
    "mask",
    "SPA",
    "button"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TemainfoSistemas/truly-ui.git/issues"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "jest --config=jest.conf.json",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:library": "ng build truly-ui --prod",
    "build:showcase": "ng build --prod --aot",
    "ci": "npm run lint && npm run test && npm run build:library && npm run build:showcase && npm run copy:marckdowns && npm run copy:assets",
    "copy:assets": "node ./tools/scripts/copy-assets.js",
    "copy:marckdowns": "node ./tools/scripts/copy-marckdowns-assets.js",
    "semantic-release": "semantic-release"
  },
  "private": false,
  "dependencies": {
    "@angular/common": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/animations": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/router": "^6.0.3",
    "bootstrap": "^3.3.7",
    "core-js": "^2.5.4",
    "font-awesome": "^4.7.0",
    "intl": "^1.2.5",
    "ionicons-npm": "^2.0.1",
    "jquery": "^3.2.1",
    "ngx-highlight-js": "^2.0.3",
    "ngx-highlightjs": "^2.0.2",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.1.0",
    "rxjs-compat": "^6.1.0",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.26"
  },
  "peerDependencies": {
    "@angular/common": "^6.0.3",
    "@angular/core": "^6.0.3",
    "font-awesome": "^4.7.0",
    "ionicons-npm": "^2.0.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.3",
    "@angular-devkit/build-ng-packagr": "~0.6.3",
    "@angular/cli": "~6.0.3",
    "@angular/compiler-cli": "^6.0.2",
    "@angular/language-service": "^6.0.2",
    "@types/jest": "^22.2.3",
    "@types/node": "~10.3.0",
    "@types/reflect-metadata": "^0.1.0",
    "codelyzer": "~4.3.0",
    "gulp": "^3.9.1",
    "gulp-inline-ng2-template": "^4.1.0",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^22.4.4",
    "jest-preset-angular": "^5.2.2",
    "ng-packagr": "^3.0.0-rc.2",
    "node-sass": "^4.9.0",
    "pre-commit": "^1.2.2",
    "protractor": "~5.3.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.4.2",
    "ts-node": "^6.0.3",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "tslint": "^5.10.0",
    "typescript": "~2.7.2"
  },
  "pre-commit": [
    "lint"
  ],
  "release": {
    "pkgRoot": "dist",
    "assets": [
      "dist/*.zip",
      "dist/*.tar.gz",
      "dist/*.tgz"
    ],
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": true,
        "pkgRoot": "dist"
      },
      {
        "path": "@semantic-release/github",
        "assets": "dist/*.tgz"
      }
    ]
  }
}
